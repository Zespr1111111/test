<body>
    <h2>10ä»¥å†…åŠ å‡æ³•ç»ƒä¹ </h2>
    <div id="quiz"></div>
    <button onclick="checkAnswers()">æ£€æŸ¥ç­”æ¡ˆ</button>
    <div id="result"></div>

<script>
// åˆå§‹åŒ–é¢˜ç›®æ•°ç»„
let questions = [];

function generateQuestion() {
    let a = Math.floor(Math.random() * 10);
    let b = Math.floor(Math.random() * 10);
    const op = Math.random() > 0.5 ? '+' : '-';
    
    // ç¡®ä¿å‡æ³•ç»“æœä¸ä¸ºè´Ÿæ•°[6](@ref)
    if (op === '-' && a < b) [a, b] = [b, a];
    
    return { a, b, op };
}

function createQuiz() {
    const quizDiv = document.getElementById('quiz');
    if (!quizDiv) {
        console.error('é¢˜ç›®å®¹å™¨æœªæ‰¾åˆ°');
        return;
    }

    questions = [];
    let htmlContent = '';
    
    for(let i=1; i<=10; i++) {
        const question = generateQuestion();
        questions.push(question);
        htmlContent += `
            <div class="question">
                <span>${i}.</span>
                <span>${question.a} ${question.op} ${question.b} =</span>
                <input type="number" 
                       min="0" 
                       max="10" 
                       id="q${i}"
                       inputmode="numeric"
                       pattern="[0-9]*">
            </div>
        `;
    }
    quizDiv.innerHTML = htmlContent;
}

function validateInput(value) {
    return Number.isInteger(value) && value >= 0 && value <= 10;
}

function checkAnswers() {
    let correct = 0;
    const resultDiv = document.getElementById('result');
    
    questions.forEach((q, index) => {
        const input = document.getElementById(`q${index+1}`);
        const userAnswer = parseInt(input.value);
        
        if (!validateInput(userAnswer)) {
            input.style.backgroundColor = 'var(--wrong-color)';
            return;
        }

        const correctAnswer = q.op === '+' ? q.a + q.b : q.a - q.b;
        
        if (userAnswer === correctAnswer) {
            correct++;
            input.style.backgroundColor = 'var(--correct-color)';
        } else {
            input.style.backgroundColor = 'var(--wrong-color)';
        }
    });

    const emoji = correct >=8 ? 'ğŸ‰' : correct >=5 ? 'ğŸ‘' : 'ğŸ’ª';
    resultDiv.innerHTML = `
        <h3>æˆç»©ï¼š${correct}/10 ${emoji}</h3>
        <p>${correct >=8 ? 'å¤ªæ£’äº†ï¼ç»§ç»­ä¿æŒï¼' 
            : correct >=5 ? 'ä¸é”™å“¦ï¼Œå†æ£€æŸ¥çœ‹çœ‹' 
            : 'å†åŠ æŠŠåŠ²ï¼Œä½ å¯ä»¥çš„ï¼'}</p>
    `;
}

// åˆå§‹åŒ–[7](@ref)
document.addEventListener('DOMContentLoaded', () => {
    createQuiz();
    // è‡ªåŠ¨èšç„¦ç¬¬ä¸€ä¸ªè¾“å…¥æ¡†
    const firstInput = document.getElementById('q1');
    if (firstInput) firstInput.focus();
});
</script>
